{{! This template displays a post in its entirety.
    It is used to display the latest post in the index, and any single post }}
<article class="hentry clearfix {{post_class}}" role="article">
    <div class="post-info fivecol first">
    <div class="inner-post-info">
         <header class="h2 article-header post-title">
            <a href="/{{slug}}" rel="bookmark">{{title}}</a>
        </header>

        <p class="byline vcard">
            <time class="updated" datetime="2012-05-03">
                {{date published_at format="MMMM DD, YYYY"}} by <strong>{{author.name}}</strong>
            </time>
        </p>

        <hr>

        <nav class="share">
            <p class="share-text">Share this post</p>
            <ul class="social-share">
                <li><a href="http://www.facebook.com/NorthernFolks"><span class="symbol">roundedfacebook</span></a></li>
                <li><a href="http://www.twitter.com/NorthernFolks"><span class="symbol">roundedtwitter</span></a></li>
                <li class="last"><a href="#"><span class="symbol">roundedgoogleplus</span></a></li>
            </ul>
        </nav>
    </div>
    </div>

    <section class="entry-content sevencol clearfix">
        <div class="featured"><a class="comments" href="{{url}}#disqus_thread" data-disqus-identifier="{{id}}">0 Comments</a></span></div>
        {{content}}
    </section> <!-- end article section -->
    <hr>

    <footer class="article-footer">

  

        {{#if tags}}
            <p class="tags">
                <span class="tags-title">
                    Tags:
                    {{#each tags}}
                        <!-- Tag Links are not quite ready yet.
                           <a href="/tags/{{this.name}}"
                           class="tag-label"
                           title="View all posts in {{this.name}}"
                           rel="category">{{this.name}}</a>
                           -->
                        {{! Use the span below to display tags as plain text until tag links are ready }}
                        <span class="tag-label">{{this.name}}</span>
                    {{/each}}
                </span>
            </p>
            <hr>
        {{/if}}

        <section  class="author clearfix">
            <div class="twocol first avatar">
                <img src="{{author.image}}" class="author-img" title="author pic"/>
            </div>
            <div class="tencol author-bio">
                <h4>{{author.name}}</h2>
                <!-- <small>{{author.location}}</small> -->
                <p>{{author.bio}}</p>
            </div>
        </section>  

    </footer> <!-- end article footer -->
    <hr>
</article>