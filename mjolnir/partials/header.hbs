<div id="header">
    <div class="row">
        <div class="medium-3 columns">
            <a class="left-off-canvas-toggle show-for-small-only"><span class="fa fa-bars"></span></a>
        </div>
        <div class="medium-3 columns">
            {{> navigation }}
        </div>
        <div class="medium-3 columns" style="float:right;">
            <div id="navigation" class="hide-for-small">
                <nav class="top-bar" data-topbar>
                    <section class="top-bar-section">
                        <ul class="right">
                            <li><a class="menu_item" href="{{@blog.url}}">Get in touch</a></li>
                        </ul>
                    </section>
                </nav>
            </div>
        </div>
        <div class="" style="float:none; margin:0 auto;text-align:center;">
            <div class="logo_container">
                {{#if @blog.logo}}
                    <a href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="{{@blog.title}}" /></a>
                    {{else}}
                    <a href="{{@blog.url}}"><span class="logo_text">{{@blog.title}}</span></a>
                {{/if}}

            </div>
        </div>

    </div>
</div>