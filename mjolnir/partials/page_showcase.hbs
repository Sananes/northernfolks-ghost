<div id="showcase">
	<div class="blog_cover" {{#if @blog.cover}}style="background-image: url({{@blog.cover}})"{{/if}}>
	    <div class="showcase_overlay {{#if @blog.cover}}at_with_blog_cover{{/if}}">
			<div class="row">
				<div class="medium-8 medium-centered columns">
					<div class="block">
						<div class="text-center">
				            {{#post}}
				            <div class="block">
				                <article class="{{post_class}}">
				                    <div class="post_header">
				                        <h2 class="post_title">{{{title}}}</h2>
				                    </div>
				                </article>
				            </div>
				            {{/post}}
						</div>
					</div>
				</div>
			</div>
	    </div>
	</div>
</div>